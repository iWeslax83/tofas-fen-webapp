{
  "name": "backend",
  "version": "1.0.0",
  "description": "Tofaş Fen Lisesi Bilgi Sistemi Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --skipLibCheck --noEmitOnError false --noEmit false",
    "dev": "ts-node --transpile-only src/index.ts",
    "dev:compiled": "node dist/index.js",
    "dev:ts": "ts-node src/index.ts",
    "dev:simple": "ts-node --transpile-only src/simple-server.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:integration": "vitest src/test/integration/",
    "test:security": "vitest src/test/security/",
    "test:performance": "vitest src/test/performance/",
    "test:unit": "vitest src/**/*.test.ts --exclude src/test/integration/ src/test/security/ src/test/performance/",
    "test:all": "vitest run",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:debug": "vitest --inspect-brk",
    "test:report": "vitest --coverage --reporter=html",
    "test:clean": "rimraf coverage",
    "test:reset": "npm run test:clean && npm run test:coverage",
    "seed": "ts-node src/seed/seed.ts",
    "seed:users": "ts-node src/seed/testUsers.ts"
  },
  "keywords": [
    "tofas",
    "fen",
    "lisesi",
    "bilgi",
    "sistemi",
    "backend"
  ],
  "author": "Tofaş Fen Lisesi",
  "license": "MIT",
  "dependencies": {
    "@types/sharp": "^0.31.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "redis": "^4.6.8",
    "sharp": "^0.34.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bcryptjs": "^3.0.2",
    "eslint": "^8.57.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  }
}
