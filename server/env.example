# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tofas-fen

# Server Configuration
PORT=3001
NODE_ENV=development
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production

# MEB E-okul Configuration
MEB_EOKUL_BASE_URL=https://eokul.meb.gov.tr
MEB_EOKUL_API_KEY=your-meb-eokul-api-key-here
MEB_EOKUL_USERNAME=your-meb-eokul-username
MEB_EOKUL_PASSWORD=your-meb-eokul-password

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Security & Performance
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=400
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/mov

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# JWT Configuration (REQUIRED - Generate strong secrets)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d 